@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">ASP.NET Turbo</h1>
    <turbo-frame id="main-content">
        <turbo-frame id="chat-feed">
            @foreach (var message in Model.Messages)
            {
                <div>
                    <strong>@message.Timestamp:</strong> @message.Text
                </div>
            }
        </turbo-frame>
        <turbo-frame id="message-form">
            <form asp-action="PostMessage" method="post" data-turbo-frame="chat-feed" target="_top">
                <input type="text" name="text" placeholder="Enter your message..." required />
                <button type="submit">Send</button>
            </form>
        </turbo-frame>
    </turbo-frame>
</div>
